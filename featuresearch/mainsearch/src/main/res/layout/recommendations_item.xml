<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <ImageView
        android:id="@+id/poster_recommendation"
        android:layout_width="40dp"
        android:layout_height="40dp"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView

        android:id="@+id/popular_name"
        style="@style/semibold_16sp_white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        app:layout_constraintStart_toEndOf="@+id/poster_recommendation"
        app:layout_constraintTop_toTopOf="@+id/poster_recommendation"
        tools:text="TextView" />

    <TextView
        android:id="@+id/description_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        tools:text="TextView"
        style="@style/regular_14sp_grey"
        app:layout_constraintBottom_toBottomOf="@+id/poster_recommendation"
        app:layout_constraintStart_toEndOf="@+id/poster_recommendation" />
</androidx.constraintlayout.widget.ConstraintLayout>